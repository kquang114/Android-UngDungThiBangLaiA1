<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pm_2"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Câu Số 1"
                    android:textColor="#0d0401"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Câu hỏi thứ nhất "
                    android:textColor="#000281"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/radGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp">

                <RadioButton
                    android:id="@+id/rad1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cus_back_1"
                    android:button="@drawable/custom_radio"
                    android:text="Trả lời 1"
                    android:padding="20dp"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/rad2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:button="@drawable/custom_radio"
                    android:checked="false"
                    android:text="Trả lời 2"
                    android:padding="20dp"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:background="#1f2021"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/rad3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checked="false"
                    android:button="@drawable/custom_radio"
                    android:text="Trả lời 3"
                    android:padding="20dp"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:background="@drawable/cus_back_2"
                    android:textStyle="bold" />

            </RadioGroup>

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="352dp"
                android:layout_height="281dp"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:paddingTop="100dp"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
