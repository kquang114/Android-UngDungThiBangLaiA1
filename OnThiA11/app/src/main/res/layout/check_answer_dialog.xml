<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/la_nhuom_mau">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Danh Sách Câu Trả Lời"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="#070c73"
        android:textStyle="bold" />

    <GridView
        android:id="@+id/gvLsQuestion"
        android:layout_width="match_parent"
        android:layout_height="409dp"
        android:numColumns="3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/cus_button_1"
            android:id="@+id/butCancle"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Đóng" />

        <Button
            android:background="@drawable/cus_button_2"
            android:id="@+id/butFinish"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Kết thúc" />
    </LinearLayout>

</LinearLayout>